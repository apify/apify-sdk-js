{
    "version": "independent",
    "packages": [
        "packages/*"
    ],
    "command": {
        "version": {
            "conventionalCommits": true,
            "createRelease": "github",
            "message": "chore(release): release packages [skip ci]"
        },
        "publish": {
            "assets": []
        }
    },
    "useNx": false,
    "ignoreChanges": [
        "**/test/**",
        "**/*.md"
    ]
}
