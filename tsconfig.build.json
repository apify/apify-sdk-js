{
    "extends": "@apify/tsconfig",
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ESNext",
        "lib": ["ESNext", "DOM", "ES2020"],
        "baseUrl": ".",
        "allowJs": true,
        "skipLibCheck": true,
        "resolveJsonModule": false
    },
    "include": ["./packages/*/src/**/*"],
    "exclude": ["**/node_modules", "**/dist"]
}
