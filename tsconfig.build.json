{
    "extends": "@apify/tsconfig",
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ESNext", "DOM", "ES2020"],
        "baseUrl": ".",
        "allowJs": true,
        "skipLibCheck": true,
        "resolveJsonModule": false,

        "outDir": "./dist",
        "module": "Node16",
        "moduleResolution": "Node16"
    },
    "include": ["./src/**/*"],
    "exclude": ["**/node_modules", "**/dist"]
}
