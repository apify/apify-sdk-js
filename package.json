{
    "name": "apify-sdk-js",
    "private": true,
    "description": "Apify SDK monorepo",
    "workspaces": [
        "packages/*",
        "packages/actor-scraper/*"
    ],
    "keywords": [
        "apify",
        "headless",
        "chrome",
        "puppeteer",
        "crawler",
        "scraper"
    ],
    "author": {
        "name": "Apify",
        "email": "support@apify.com",
        "url": "https://apify.com"
    },
    "contributors": [
        "Jan Curn <jan@apify.com>",
        "Marek Trunkat <marek@apify.com>",
        "Ondra Urban <ondra@apify.com>"
    ],
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/apify/apify-ts"
    },
    "bugs": {
        "url": "https://github.com/apify/apify-ts/issues"
    },
    "homepage": "https://sdk.apify.com/",
    "scripts": {
        "postinstall": "npx husky install",
        "prepublishOnly": "turbo run copy",
        "clean": "turbo run clean",
        "build": "turbo run build",
        "ci:build": "turbo run build --cache-dir=\".turbo\"",
        "test": "jest --silent",
        "test:e2e": "node test/e2e/run.mjs",
        "coverage": "jest --coverage",
        "release": "npm run build && lerna version patch && lerna publish from-package --contents dist --force-publish",
        "publish:next": "lerna publish from-package --contents dist --canary --dist-tag next --force-publish",
        "release:next": "npm run build && npm run publish:next",
        "lint": "eslint packages/*/src test",
        "lint:fix": "eslint packages/*/src test --fix"
    },
    "devDependencies": {
        "@apify/eslint-config-ts": "^0.2.3",
        "@apify/tsconfig": "^0.1.0",
        "@commitlint/config-conventional": "^17.0.3",
        "@types/content-type": "^1.1.5",
        "@types/fs-extra": "^9.0.13",
        "@types/jest": "^28.1.5",
        "@types/node": "^18.0.3",
        "@types/rimraf": "^3.0.2",
        "@types/semver": "^7.3.10",
        "@types/tough-cookie": "^4.0.2",
        "@types/ws": "^8.5.3",
        "@typescript-eslint/eslint-plugin": "5.30.6",
        "@typescript-eslint/parser": "5.30.6",
        "commitlint": "^17.0.3",
        "eslint": "^8.19.0",
        "fs-extra": "^10.1.0",
        "gen-esm-wrapper": "^1.1.3",
        "husky": "^8.0.1",
        "jest": "^28.1.2",
        "lerna": "^4.0.0",
        "lint-staged": "^13.0.3",
        "rimraf": "^3.0.2",
        "ts-jest": "^28.0.5",
        "ts-node": "^10.8.2",
        "turbo": "1.3.1",
        "typescript": "^4.7.4"
    },
    "packageManager": "npm@8.5.3"
}
