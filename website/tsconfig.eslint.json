{
    "extends": "@apify/tsconfig",
    "compilerOptions": {
        "jsx": "preserve",
        "allowJs": true
    },
    "include": ["/**/*.js", "/**/*.ts", "src/**/*.jsx", "src/**/*.tsx"],
    "exclude": [
        "node_modules",
        "dist",
        "build",
        "coverage",
        "test",
        "**/*.test.ts",
        "**/*.test.js",
        "eslint.config.mjs"
    ]
}
