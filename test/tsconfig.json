{
    "extends": "../tsconfig.json",
    "include": [
        "**/*",
        "../packages/*/src/**/*"
    ],
    "compilerOptions": {
        "sourceMap": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "strictNullChecks": false,
        "types": ["vitest/globals"],
        "module": "Node16",
        "moduleResolution": "Bundler",
        "resolveJsonModule": true
    }
}
