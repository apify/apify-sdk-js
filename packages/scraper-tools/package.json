{
    "name": "@apify/scraper-tools",
    "version": "1.1.4",
    "description": "Tools shared by Apify actor-scrapers.",
    "type": "module",
    "files": [
        "dist"
    ],
    "tshy": {
        "exports": {
            "./package.json": "./package.json",
            ".": "./src/index.ts"
        }
    },
    "author": {
        "name": "Apify Technologies",
        "email": "support@apify.com",
        "url": "https://apify.com"
    },
    "contributors": [
        "Marek Trunkat <marek@apify.com>",
        "Ondra Urban <ondra@apify.com>"
    ],
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/apify/apify-sdk-js"
    },
    "homepage": "https://github.com/apify/apify-sdk-js",
    "scripts": {
        "build": "npm run clean && npm run compile",
        "compile": "tshy",
        "clean": "rimraf ./dist"
    },
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "@apify/log": "^2.4.0",
        "ajv": "^8.12.0",
        "content-type": "^1.0.5",
        "tslib": "^2.6.1"
    },
    "devDependencies": {
        "@crawlee/browser-pool": "^3.8.2",
        "@crawlee/core": "^3.8.2",
        "@crawlee/types": "^3.8.2",
        "@crawlee/utils": "^3.8.2",
        "apify": "workspace:^"
    },
    "peerDependencies": {
        "@crawlee/browser-pool": "^3.8.2",
        "@crawlee/core": "^3.8.2",
        "@crawlee/types": "^3.8.2",
        "@crawlee/utils": "^3.8.2",
        "apify": "workspace:^"
    },
    "peerDependenciesMeta": {
        "@crawlee/puppeteer": {
            "optional": true
        },
        "@crawlee/playwright": {
            "optional": true
        }
    },
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "import": {
                "types": "./dist/esm/index.d.ts",
                "default": "./dist/esm/index.js"
            },
            "require": {
                "types": "./dist/commonjs/index.d.ts",
                "default": "./dist/commonjs/index.js"
            }
        }
    },
    "main": "./dist/commonjs/index.js",
    "types": "./dist/commonjs/index.d.ts",
    "module": "./dist/esm/index.js"
}
