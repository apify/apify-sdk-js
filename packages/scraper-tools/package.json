{
    "name": "@apify/scraper-tools",
    "version": "1.0.0",
    "description": "Tools shared by Apify actor-scrapers.",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "author": {
        "name": "Apify Technologies",
        "email": "support@apify.com",
        "url": "https://apify.com"
    },
    "contributors": [
        "Marek Trunkat <marek@apify.com>",
        "Ondra Urban <ondra@apify.com>"
    ],
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/apify/apify-sdk-js"
    },
    "homepage": "https://github.com/apify/apify-sdk-js",
    "scripts": {
        "build": "npm run clean && npm run compile && npm run copy",
        "clean": "rimraf ./dist",
        "compile": "tsc -p tsconfig.build.json && gen-esm-wrapper ./dist/index.js ./dist/index.mjs",
        "copy": "ts-node -T ../../scripts/copy.ts --readme=false"
    },
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "@apify/log": "^2.1.4",
        "ajv": "^8.11.0",
        "content-type": "^1.0.4"
    },
    "devDependencies": {
        "apify": "^3.0.0",
        "@crawlee/browser-pool": "^3.1.0",
        "@crawlee/core": "^3.1.0",
        "@crawlee/types": "^3.1.0",
        "@crawlee/utils": "^3.1.0"
    },
    "peerDependencies": {
        "apify": "^3.0.0",
        "@crawlee/browser-pool": "^3.1.0",
        "@crawlee/core": "^3.1.0",
        "@crawlee/types": "^3.1.0",
        "@crawlee/utils": "^3.1.0"
    },
    "peerDependenciesMeta": {
        "@crawlee/puppeteer": {
            "optional": true
        },
        "@crawlee/playwright": {
            "optional": true
        }
    }
}
